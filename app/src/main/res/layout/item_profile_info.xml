<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/iv_profile_info_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile_icon_lang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_profile_info_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="구사언어"
        android:textColor="@color/Gray6"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_profile_info_icon"
        app:layout_constraintStart_toEndOf="@id/iv_profile_info_icon"
        app:layout_constraintTop_toTopOf="@id/iv_profile_info_icon" />

    <ImageView
        android:id="@+id/iv_profile_mini_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:src="@drawable/profile_mini_line"
        app:layout_constraintBottom_toBottomOf="@id/tv_profile_info_type"
        app:layout_constraintStart_toEndOf="@id/tv_profile_info_type"
        app:layout_constraintTop_toTopOf="@id/tv_profile_info_type" />

    <TextView
        android:id="@+id/tv_profile_info_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="한국어, 영어, 스페인어"
        android:textColor="@color/Gray6"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_profile_info_type"
        app:layout_constraintStart_toEndOf="@id/iv_profile_mini_line"
        app:layout_constraintTop_toTopOf="@id/tv_profile_info_type" />

</androidx.constraintlayout.widget.ConstraintLayout>