<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item_past_meet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="20dp"
        android:padding="16dp"
        android:background="@drawable/making_tour_add_list_place_info">

    <TextView
        android:id="@+id/tv_item_past_meet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_item_past_meet_title"
        android:fontFamily="@font/suite_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_item_past_meet_date"
            android:fontFamily="@font/pretendard_regular"
            app:layout_constraintStart_toStartOf="@id/tv_item_past_meet_title"
            app:layout_constraintTop_toBottomOf="@id/tv_item_past_meet_title" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_item_past_meet_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_item_past_meet_thumbnail_img"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_olivia" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_item_past_meet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/cv_item_past_meet_thumbnail"
            app:layout_constraintTop_toTopOf="@id/cv_item_past_meet_thumbnail"
            android:text="@string/profile_item_product_user"
            android:fontFamily="@font/pretendard_medium"
            android:lineSpacingExtra="5sp"
            android:lineHeight="22sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tv_item_past_meet_tourtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/cv_item_past_meet_thumbnail"
            app:layout_constraintBottom_toBottomOf="@id/cv_item_past_meet_thumbnail"
            android:text="@string/profile_item_product_user_type"
            android:fontFamily="@font/pretendard_regular"
            android:lineSpacingExtra="4sp"
            android:lineHeight="18sp"
            android:layout_marginEnd="8dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>