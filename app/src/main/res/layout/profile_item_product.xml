<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

 <androidx.constraintlayout.widget.ConstraintLayout
     android:id="@+id/item1Layout"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     app:layout_constraintEnd_toEndOf="@id/guide_end"
     app:layout_constraintStart_toStartOf="@id/guide_start"
     app:layout_constraintTop_toTopOf="parent"
     android:padding="16dp"
     android:layout_marginBottom="20dp"
     android:background="@drawable/making_tour_add_list_place_info">

     <TextView
         android:id="@+id/item1Layout_rv_tv"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="홍대에서 만나는 디자인과 예술"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         />

     <androidx.cardview.widget.CardView
         android:id="@+id/iv_item_home_thumbnail"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
            app:cardElevation="0dp"
         android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item1Layout_rv_tv">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_item_home_thumbnail_img"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_olivia" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/tv_item_home_contents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/iv_item_home_thumbnail"
            app:layout_constraintTop_toTopOf="@id/iv_item_home_thumbnail">


            <TextView
                android:id="@+id/tv_textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="레이첼"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여행자"
                android:textColor="@color/black"/>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn_meet_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:gravity="center_vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/iv_item_home_thumbnail"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ll_btn_meet_1_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘 만나요"
                android:textColor="@color/Gray1"
                android:background="@color/Orange5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />

        </LinearLayout>


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/Gray1.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/ll_btn_meet_1"
        android:layout_marginTop="16dp"/>

     <ImageView
         android:id="@+id/iv_calendar_icon"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/group_calendar_icon"
         app:layout_constraintStart_toStartOf="parent"
         android:layout_marginTop="16dp"
         app:layout_constraintTop_toBottomOf="@id/line"/>

    <TextView
        android:id="@+id/tv_date"
        style="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023년 11월 11일 오전 9시"
        android:textStyle="bold"
        android:textColor="@color/Gray7"
        app:layout_constraintStart_toEndOf="@id/iv_calendar_icon"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_marginTop="16dp"/>

     <ImageView
         android:id="@+id/iv_flag_icon"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/group_flag_icon"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@id/iv_calendar_icon"
         android:layout_marginTop="9dp"/>

     <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/ll_places"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="8dp"
         app:layout_constraintStart_toEndOf="@id/iv_flag_icon"
         app:layout_constraintTop_toTopOf="@id/iv_flag_icon">

    <TextView
        android:id="@+id/ll_places_tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="건국대학교"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/Gray8"/>

    <TextView
        android:id="@+id/tv_place_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울특별시 광진구 능동로 120"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_places_tv_place"
        android:textColor="@color/Gray6"
        />
 </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>