<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_delete_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/making_tour_add_list_dialog_delete"
            android:textSize="16sp"
            android:textColor="@color/Red3"
            android:text="@string/making_tour_add_list_place_delete"
            android:layout_marginBottom="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/making_tour_time_button_next"
            android:text="@string/making_tour_add_list_place_cancel"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>
</layout>
