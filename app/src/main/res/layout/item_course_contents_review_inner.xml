<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rectangle_gray2_12">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_review_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:cardCornerRadius="44dp">

            <ImageView
                android:id="@+id/iv_review_image"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_example_user"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_user_name"
            app:layout_constraintStart_toEndOf="@id/cv_review_image"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="알렉스null"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:textColor="@color/Gray8"
            android:fontFamily="@font/pretendard_medium"/>

        <TextView
            android:id="@+id/tv_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="여행자null"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/Gray6"
            app:layout_constraintTop_toBottomOf="@id/tv_user_name"
            app:layout_constraintBottom_toBottomOf="@id/cv_review_image"
            app:layout_constraintStart_toStartOf="@id/tv_user_name"/>

        <TextView
            android:id="@+id/tv_when_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_review_month_string"
            app:layout_constraintEnd_toStartOf="@id/tv_review_month_string"
            android:text="1주"
            android:layout_marginEnd="4dp"
            android:textSize="12sp"
            android:textColor="@color/Gray8"
            android:fontFamily="@font/pretendard_regular"/>

        <TextView
            android:id="@+id/tv_review_month_string"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/review_date"
            android:textSize="12sp"
            android:textColor="@color/Gray8"
            android:fontFamily="@font/pretendard_regular"/>

        <TextView
            android:id="@+id/tv_review"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_user_nickname"
            android:layout_marginTop="20dp"
            android:textColor="@color/Gray8"
            android:fontFamily="@font/pretendard_medium"
            android:textFontWeight="500"
            android:lineHeight="22sp"
            android:text="레이첼은 정말 밝고 친절하고 열정적이고 소통 능력이 뛰어나면 배려심이 많고 호기심이 지대해요. 레이첼은 정말 밝고 친절하고 열정적이고 소통 능력이 뛰어나면 배려심이 많고 호기심이 지대해요. "
            android:maxLines="4"/>

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>